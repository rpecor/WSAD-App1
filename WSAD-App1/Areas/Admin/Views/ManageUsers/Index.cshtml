        </th>
        <th></th>
    </tr>

@*@foreach (var item in Model)*@
    @for (int i=0; i < Model.Count; i++)
    {
        var item = Model[i];
    <tr>
        <td>
            @Html.HiddenFor(x => Model[i].Id)
            @Html.CheckBoxFor(x => Model[i].IsSelected)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsAdmin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Account", new { id = item.Id, area = "" }, null) |
            @Html.ActionLink("Details", "UserProfile", "Account", new { id = item.Id, area = "" }, null) |
            @Html.ActionLink("View Sessions", "SessionListByUser", "ManageSession", new { userId = item.Id }, null)
        </td>
    </tr>

    }
</table>
    <button onclick="alertBox" type="submit" class="btn btn-danger">Delete User</button>

}
