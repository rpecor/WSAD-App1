@model List<WSAD_App1.Areas.Admin.Models.ViewModels.ManageUser.ManageUserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Manage Users</h2>



@using (Html.BeginForm("Delete", "ManageUsers"))
{
<table class="table">
    <tr>
        <th>&nbsp;</th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email Address
        </th>
        <th>
            username
        </th>
        <th>
