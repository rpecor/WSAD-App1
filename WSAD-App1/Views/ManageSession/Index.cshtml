@model List<WSAD_App1.Models.ViewModels.ManageSessions.ManageSessionViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Manage Sessions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Delete", "ManageSessions"))
{
    
<table class="table">
    <tr>
        <th>
            &nbsp;
        </th>
        <th>
           Title
        </th>
        <th>
            Description
        </th>
        <th>
            Presenter
        </th>
        <th>
            Room
        </th>
