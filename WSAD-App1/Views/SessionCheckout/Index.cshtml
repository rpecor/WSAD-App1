@model List<WSAD_App1.Models.ViewModels.SessionSignup.SessionSignupViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>My Schedule</h2>

<p>
    @Html.ActionLink("Signup for more events", "Index", "Session")
</p>
@using (Html.BeginForm("Delete", "SessionCheckout"))
{
<table class="table">
    <tr>
        <th>
            Select    
        </th>
        <th>
            Session
        </th>
        <th>
            Session Time
        </th>
        
        <th>
            Room 
        </th>
        <th></th>
    </tr>

@for(int i=0;i < Model.Count; i++)
{
    var item = Model[i];
    <tr>
        <td>
            @Html.HiddenFor(x => Model[i].Id)
            @Html.CheckBoxFor(x => Model[i].IsSelected)
        </td>
        <td>
            <b>@Html.DisplayFor(modelItem => item.Session.Title)</b><br />
            @Html.DisplayFor(modelItem => item.Session.Presenter)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Session.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Session.Room)
        </td>
        
    </tr>
}

</table>

    <button type="submit" class="btn btn-danger">Remove Sessions</button>
}